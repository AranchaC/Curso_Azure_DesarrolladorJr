@using Entidades;
@model Proveedor


<h2 style="text-align: center; background-color:aquamarine">CREAR NUEVO PROVEEDOR</h2>

<form method="post" asp-action="Create" class="">
<div class="container">
	<div class="row">
		<div class="col">
			<label for="nombre">NOMBRE</label>
			<input id="nombre" type="text" class="form-control" asp-for="Nombre"/>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<label for="direccion">DIRECCIÓN</label>
			<input id="direccion" type="text" class="form-control" asp-for="Direccion" />
		</div>
	</div>
	<div class="row" >
		<div class="col">
			<label for="telefono">TELÉFONO</label>
			<input id="telefono" type="text" class="form-control" asp-for="Telefono"/>
		</div>
	</div>
	<div class="row" style="margin-top: 15px; ">
			<div class="col-3" style="text-align:center">
			<input type="submit" class=" btn btn-dark form-control" value="Enviar" />
		</div>
	</div>
</div>
</form>