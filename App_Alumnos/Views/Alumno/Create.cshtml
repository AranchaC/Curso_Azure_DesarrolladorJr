@model Alumno
<h2 style="text-align:center">CREAR NUEVO ALUMNO</h2>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="Nombre">NOMBRE</label>
        <input type="text" asp-for=Nombre class="form-control" id="Nombre" style="margin-top:5px;" />
    </div>
    <div class="form-group">
        <label for="Apellido">APELLIDO</label>
        <input type="text" asp-for=Apellido class="form-control" id="Apellido" style="margin-top:5px;" />
    </div>

    <button type="submit" class="btn btn-danger" style="margin-top:8px;">CREAR ALUMNO</button>
</form>
<br />
<a class=" btn btn-primary" asp-action="Index" asp-controller="Alumno">VOLVER</a>